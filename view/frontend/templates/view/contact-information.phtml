<?php /** @var \Smile\StoreLocator\Block\View\ContactInformation $block */ ?>
<?php if ($block->hasContactInformation()) :?>
    <div class="contact-info">
        <div class="contact-info-wrapper">
            <h3><?php echo __("Contact");?></h3>
            <table>
                <tbody>
                <?php if ($block->getRetailer()->getContactPhone()) :?>
                    <tr>
                        <td><span><?php echo __('Telephone');?> : </span><span itemprop="telephone"><?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getRetailer()->getContactPhone());?></span></td>
                    </tr>
                <?php endif;?>
                <?php if ($block->getRetailer()->getContactFax()) :?>
                    <tr>
                        <td><span><?php echo __('Fax');?> : </span><span itemprop="faxNumber"><?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getRetailer()->getContactFax());?></span></td>
                    </tr>
                <?php endif;?>
                <?php if ($block->getRetailer()->getContactMail()) :?>
                    <tr>
                        <td><meta itemprop="email" content="<?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getRetailer()->getContactMail());?>"/><span><?php echo __('Mail');?> : <a href="mailto:<?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getRetailer()->getContactMail());?>"><?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getRetailer()->getContactMail());?></a></span></td>
                    </tr>
                <?php endif;?>
                </tbody>
                <?php if ($block->showContactForm()) :?>
                    <tfoot>
                        <tr>
                            <td><span class="contact-form-link"><a href="<?php /* @escapeNotVerified */ echo $block->escapeHtml($block->getContactFormUrl());?>"><?php echo __('Contact Us');?></a></span></td>
                        </tr>
                    </tfoot>
                <?php endif;?>
            </table>
        </div>
    </div>
<?php endif;?>
